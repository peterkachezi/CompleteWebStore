            });

            return false;
        }

        if ($('#txtItemName1').val() == '') {
            $('#txtItemName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Item Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtItemNumber1').val() == '') {
            $('#txtItemNumber1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Item Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtManufacturer1').val() == '') {
            $('#txtManufacturer1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Manufacturer is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#Quantity1').val() == '') {
            $('#Quantity1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Quantity is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtStatus1').val() == '') {
            $('#txtStatus1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Status is a required field",
