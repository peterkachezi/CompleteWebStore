@model IEnumerable<WebStore.Data.DTOs.CustomerOrderModule.CustomerOrderDTO>


@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <div class="card border border-info">
                <div class="card-body">
                    <h5 class="card-title Header">Customer Details</h5>
                    <p class="card-text"><strong>Name:Peter Kachezi  ||  Phone Number :0704509484  ||  Email:peterkachezi@gmail.com  || Shipping Address:Thika Road -Roysambu </strong></p>
                </div>
            </div>
        </div>



        <div class="col-md-8">
            <div class="card border border-info">
                <div class="card-body">
                    <h5 class="card-title Header">Orders</h5>
                    <div class="card-box table-responsive">
                        <table id="tblCustomer" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Order Number</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Selling Price</th>
                                    <th scope="col">Product Code</th>
                                    <th scope="col">Order Date</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model != null && Model.Count() > 0)
                                {
                                    int count = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.OrderNumber</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.SellingPrice</td>
                                            <td>@item.ProductCode</td>
                                            <td>@item.OrderDate.ToShortDateString()</td>

                                        </tr>
                                        count++;
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="card border border-info">
                <div class="card-body">
                    <h5 class="card-title Header">Total</h5>
                    <p class="card-text"><strong>Name:Peter Kachezi  ||  Phone Number :0704509484  ||  Email:peterkachezi@gmail.com  || Shipping Address:Thika Road -Roysambu </strong></p>
                </div>
            </div>
        </div>


    </div>

</div>

<style>
    .card {
        margin-bottom: 10px;
    }


    .Header {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.2rem;
        max-width: calc(100% - 40px);
    }
</style>
