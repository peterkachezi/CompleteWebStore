<div class="modal fade" id="ModalCreateFurniture" tabindex="-1" role="dialog" aria-labelledby="ModalCreateFurnitureLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateFurnitureLabel"> Add Furniture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmCreateFurniture">

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Name</label>
                        <input type="email" class="form-control" id="txtItemName" name="ItemName" aria-describedby="emailHelp" placeholder="e.g Office Desk ">
                    </div>



                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Number</label>
                        <input type="email" class="form-control" id="txtItemNumber" name="ItemNumber" aria-describedby="emailHelp" placeholder="e.g S4500">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Manufacturer</label>
                        <input type="email" class="form-control" id="txtManufacturer" name="Manufacturer" aria-describedby="emailHelp" placeholder="e.g Safvic Furniture">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Quantity</label>
                        <input type="email" class="form-control numericOnly" id="txtQuantity" name="Quantity" aria-describedby="emailHelp" placeholder="e.g John Doe">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Item Condition /  Status</label>
                        <select name="Status" class="form-control" id="txtStatus">
                            <option value="0">Good</option>
                            <option value="1">Bad</option>
                        </select>
                    </div>


                    <div class="form-group col-md-12">

                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="txtDescription" rows="3" name="Description"></textarea>



                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" onclick="SaveData()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>





