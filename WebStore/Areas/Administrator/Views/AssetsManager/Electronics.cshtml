        position: fixed;
        width: 256px;
        height: 256px;
        top: 50%;
        left: 50%;
        margin: -128px 0 0 -128px;
        z-index: 1000;
    }

    .Title {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.5rem;
        line-height: 70px;
        max-width: calc(100% - 40px);
    }
</style>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/Content/sweetalart/sweetalert.min.js"></script>

<script>


    $(document).ready(function () {
        GetAllData();

    });

    function GetAllData() {


        var t = $('#tblFurniture').DataTable({
            "ajax": {
                "url": "/Administrator/AssetsManager/GetElectronics",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [
                { "data": "Id" },
                { "data": "Name" },
                { "data": "ModelNumber" },
                { "data": "SerialNumber" },
                { "data": "Quantity" },
                { "data": "Description" },
                { "data": "StatusDescription" },
                { "data": "NewCreateDate" },
                { "data": "CreatedByName" },


                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetRecord('" + row.Id + "'); >Edit</a> / <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.Id + "'); >Delete</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    function DeleteRecord(e) {

        $("#divLoader").show();
        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Administrator/AssetsManager/DeleteElectronics/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function SaveData() {

        if ($('#txtName').val() == '') {
            $('#txtName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }
        if ($('#txtModelNumber').val() == '') {
            $('#txtModelNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Model Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtSerialNumber').val() == '') {
            $('#txtSerialNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Serial Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtQuantity').val() == '') {
            $('#txtQuantity').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Quantity is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtStatus').val() == '') {
            $('#txtStatus').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Status is a required field",
                showConfirmButton: true,
            });

            return false;
        }
        $("#divLoader").show();

        $("#ModalCreateElectronic").modal('hide');

        var data = $("#frmCreateElectronic").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/CreateElectronics",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }
    function UpdateData() {

        if ($('#txtName1').val() == '') {
            $('#txtName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }
        if ($('#txtModelNumber1').val() == '') {
            $('#txtModelNumber1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Model Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtSerialNumber1').val() == '') {
            $('#txtSerialNumber1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Serial Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtQuantity1').val() == '') {
            $('#txtQuantity1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Quantity is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtStatus1').val() == '') {
            $('#txtStatus1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Status is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        $("#divLoader").show();
        $("#ModalUpdateElectronic").modal('hide');

        var data = $("#frmUdateElectronic").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/UpdateElectronics",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }

    function GetRecord(e) {
        var id = e;

        $.get("/Administrator/AssetsManager/GetElectronicByIdAsync/?Id=" + id, function (data, status) {
            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.Id);
                $("#txtDescription1").val(data.data.Description);
                $("#txtModelNumber1").val(data.data.ModelNumber);
                $("#txtName1").val(data.data.Name);
                $("#txtQuantity1").val(data.data.Quantity);
                $("#txtSerialNumber1").val(data.data.SerialNumber);
                $("#txtStatus1").val(data.data.Status);

                     

                $('#ModalUpdateElectronic').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateElectronic").modal('show');
            }

        });
    };

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });

</script>


