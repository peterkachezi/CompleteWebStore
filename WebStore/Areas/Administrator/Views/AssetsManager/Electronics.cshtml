
@{
    ViewBag.Title = "Furnitures";
}

<div class="">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Header"><i class="fa fa-tv"></i> Electronics</h6>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#ModalCreateElectronic" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                </div>

            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">


                            <table id="tblFurniture" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Model Number</th>
                                        <th scope="col">Serial Number</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Entry Date</th>
                                        <th scope="col">Created By</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>

                            </table>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>



<div class="modal fade" id="ModalCreateElectronic" tabindex="-1" role="dialog" aria-labelledby="ModalCreateElectronicLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateElectronicLabel"> Add Furniture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmCreateElectronic">


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Name</label>
                        <input type="email" class="form-control" id="txtName" name="Name" aria-describedby="emailHelp" placeholder="e.g Computer ">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Number</label>
                        <input type="email" class="form-control" id="txtModelNumber" name="ModelNumber" aria-describedby="emailHelp" placeholder="e.g S4500">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Serial Number</label>
                        <input type="email" class="form-control" id="txtSerialNumber" name="SerialNumber" aria-describedby="emailHelp" placeholder="e.g 4529855">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Quantity</label>
                        <input type="email" class="form-control numericOnly" id="txtQuantity" name="Quantity" aria-describedby="emailHelp" placeholder="e.g 12">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Item Condition /  Status</label>
                        <select name="Status" class="form-control" id="txtStatus">
                            <option value="0">Good</option>
                            <option value="1">Bad</option>
                        </select>
                    </div>


                    <div class="form-group col-md-12">

                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="txtDescription" rows="3" name="Description"></textarea>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" onclick="SaveData()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalUpdateElectronic" tabindex="-1" role="dialog" aria-labelledby="ModalUpdateElectronicLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalUpdateElectronicLabel"> Update Furniture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmUdateElectronic">
                    <input type="hidden" name="Id" id="txtId" />

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Name</label>
                        <input type="email" class="form-control" id="txtName1" name="Name" aria-describedby="emailHelp" placeholder="e.g Computer ">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Item Number</label>
                        <input type="email" class="form-control" id="txtModelNumber1" name="ModelNumber" aria-describedby="emailHelp" placeholder="e.g S4500">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Serial Number</label>
                        <input type="email" class="form-control" id="txtSerialNumber1" name="SerialNumber" aria-describedby="emailHelp" placeholder="e.g 4529855">
                    </div>


                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Quantity</label>
                        <input type="email" class="form-control numericOnly" id="txtQuantity1" name="Quantity" aria-describedby="emailHelp" placeholder="e.g 12">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Item Condition /  Status</label>
                        <select name="Status" class="form-control" id="txtStatus1">
                            <option value="0">Good</option>
                            <option value="1">Bad</option>
                        </select>
                    </div>


                    <div class="form-group col-md-12">

                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="txtDescription1" rows="3" name="Description"></textarea>
                    </div>

                </form>



            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" onclick="UpdateData()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>

<div id="divLoader" style="display:none;" class="loader">

    <img src="~/Content/loaders/loading-23.gif" alt="Loader" style="width:20em;" />

</div>

<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .Header {
        font-weight: 600;
        color: #45ca9f;
        font-size: 1.1rem;
