            });

            return false;
        }
        $("#divLoader").show();
        $("#ModalUpdateFurniture").modal('hide');

        var data = $("#frmUdateFurniture").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/UpdateFurniture",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }

    function GetRecord(e) {
        var id = e;

        $.get("/Administrator/AssetsManager/GetFurnitureById/?Id=" + id, function (data, status) {
            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.Id);
                $("#txtDescription1").val(data.data.Description);
                $("#txtItemName1").val(data.data.ItemName);
                $("#txtItemNumber1").val(data.data.ItemNumber);
                $("#txtManufacturer1").val(data.data.Manufacturer);
                $("#txtQuantity1").val(data.data.Quantity);
                $("#txtStatus1").val(data.data.Status);


                $("#txt1").val("I AM DISPLAYING IN THE TEXTAREA");



                $('#ModalUpdateFurniture').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateFurniture").modal('show');
            }

        });
    };

    //Allow users to enter numbers only
    $(".numericOnly").bind('keypress', function (e) {
        if (e.keyCode == '9' || e.keyCode == '16') {
            return;
        }
        var code;
        if (e.keyCode) code = e.keyCode;
        else if (e.which) code = e.which;
        if (e.which == 46)
            return false;
        if (code == 8 || code == 46)
            return true;
        if (code < 48 || code > 57)
            return false;
    });

    //Disable paste
    $(".numericOnly").bind("paste", function (e) {
        e.preventDefault();
    });

    $(".numericOnly").bind('mouseenter', function (e) {
        var val = $(this).val();
        if (val != '0') {
            val = val.replace(/[^0-9]+/g, "")
            $(this).val(val);
        }
    });

</script>

