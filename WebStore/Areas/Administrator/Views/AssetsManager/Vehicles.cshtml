
@{
    ViewBag.Title = "Index";
}


<div class="">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Header"><i class="fa fa-bus"></i> Vehicles</h6>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#ModalCreateVehicle" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i> </button>
                </div>

            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">


                            <table id="tblVehicle" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Model Name</th>
                                        <th scope="col">Model Year</th>
                                        <th scope="col">Plate Number</th>
                                        <th scope="col">Make</th>
                                        <th scope="col">Capacity</th>
                                        <th scope="col">Owner</th>
                                        <th scope="col">Date Purchased</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Created By</th>
                                        <th scope="col">Create Date</th>
                                        <th scope="col">Action</th>

                                    </tr>
                                </thead>

                            </table>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>



<div class="modal fade" id="ModalCreateVehicle" tabindex="-1" role="dialog" aria-labelledby="ModalCreateVehicleLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateVehicleLabel"> Create New</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmCreateFurniture">

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Model Name</label>
                        <input type="email" class="form-control" id="txtModelName" name="ModelName" aria-describedby="emailHelp" placeholder="e.g Hilux,Prado VX-L">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Model Year</label>
                        <input type="email" class="form-control" id="txtModelYear" name="ModelYear" aria-describedby="emailHelp" placeholder="e.g 2015">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Plate Number</label>
                        <input type="email" class="form-control" id="txtPlateNumber" name="PlateNumber" aria-describedby="emailHelp" placeholder="e.g KCH 4..">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Make</label>
                        <select class="form-control" name="MakeId">
                            @if (ViewBag.Makes != null)
                            {
                                foreach (var item in ViewBag.Makes)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }


                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Capacity</label>
                        <input type="email" class="form-control" id="txtCapacity" name="Capacity" aria-describedby="emailHelp" placeholder="e.g 4">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Owner Name</label>
                        <input type="email" class="form-control" id="txtOwner" name="Owner" aria-describedby="emailHelp" placeholder="e.g John Doe">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Date Purchased</label>
                        <input type="date" class="form-control" id="txtDatePurchased" value='@DateTime.Now.ToString("yyyy-MM-dd")' name="DatePurchased" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Vehicle Condition</label>
                        <select name="Status" class="form-control" id="txtStatus">
                            <option value="0">Good</option>
                            <option value="1">Bad</option>
                        </select>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" onclick="SaveData()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalUpdateVehicle" tabindex="-1" role="dialog" aria-labelledby="ModalUpdateVehicleLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalUpdateVehicleLabel"> Create New</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmUpdateVehicle">

                    <input type="hidden" id="txtId" name="Id" />

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Model Name</label>
                        <input type="email" class="form-control" id="txtModelName1" name="ModelName" aria-describedby="emailHelp" placeholder="e.g Hilux,Prado VX-L">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Model Year</label>
                        <input type="email" class="form-control" id="txtModelYear1" name="ModelYear" aria-describedby="emailHelp" placeholder="e.g 2015">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Plate Number</label>
                        <input type="email" class="form-control" id="txtPlateNumber1" name="PlateNumber" aria-describedby="emailHelp" placeholder="e.g KCH 4..">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Make</label>
                        <select class="form-control" id="txtMakeId" name="MakeId">
                            @if (ViewBag.Makes != null)
                            {
                                foreach (var item in ViewBag.Makes)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }

                        </select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Capacity</label>
                        <input type="email" class="form-control" id="txtCapacity1" name="Capacity" aria-describedby="emailHelp" placeholder="e.g 4">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Owner Name</label>
                        <input type="email" class="form-control" id="txtOwner1" name="Owner" aria-describedby="emailHelp" placeholder="e.g John Doe">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Date Purchased</label>
                        <input type="date" class="form-control" id="txtDatePurchased1" name="DatePurchased" aria-describedby="emailHelp">


                    </div>

                    <div class="form-group col-md-4">
                        <label for="exampleInputEmail1">Select Vehicle Condition</label>
                        <select name="Status" class="form-control" id="txtStatus1">
                            <option value="0">Good</option>
                            <option value="1">Bad</option>
                        </select>
                    </div>


                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" onclick="UpdateData()" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>



<div id="divLoader" style="display:none;" class="loader">

    <img src="~/Content/loaders/loading-23.gif" alt="Loader" style="width:20em;" />

</div>

<style>

    .success {
        background: #26B99A;
        color: #fff;
    }

    .danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
