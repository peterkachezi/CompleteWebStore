<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/sweetalart/sweetalert.min.css" rel="stylesheet" />
<script src="~/Content/sweetalart/sweetalert.min.js"></script>



<script>


    $(document).ready(function () {

        GetAllData();


    });


    function GetAllData() {

        var t = $('#tblVehicle').DataTable({
            "ajax": {
                "url": "/Administrator/AssetsManager/GetVehicles",
                "type": "GET",
                "datatype": "json",

            },

            "columns": [

                { "data": "Id" },
                { "data": "ModelName" },
                { "data": "ModelYear" },
                { "data": "PlateNumber" },
                { "data": "MakeName" },
                { "data": "Capacity" },
                { "data": "Owner" },
                { "data": "NewDatePurchased" },
                { "data": "StatusDescription" },
                { "data": "CreatedByName" },
                { "data": "NewCreateDate" },

                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetRecord('" + row.Id + "'); >Edit</a> / <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.Id + "'); >Delete</a>";

                    }
                }

            ]

        });

        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

    }

    function DeleteRecord(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Administrator/AssetsManager/DeleteVehicle/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function SaveData() {

        if ($('#departmentsDropdown').val() == '' || $('#departmentsDropdown').val() < 1) {
            $('#txtNamedepartmentsDropdown').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Vehicle Make is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtModelName').val() == '') {
            $('#txtModelName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Model Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtModelYear').val() == '') {
            $('#txtModelYear').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Model Year is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtPlateNumber').val() == '') {
            $('#txtPlateNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Plate Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtCapacity').val() == '') {
            $('#txtCapacity').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Capacity is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtOwner').val() == '') {
            $('#txtOwner').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Owner name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtDatePurchased').val() == '') {
            $('#txtDatePurchased').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: " Date of purchase is a required field",
                showConfirmButton: true,
            });

            return false;
        }


        $("#divLoader").show();
        $("#ModalCreateVehicle").modal('hide');

        var data = $("#frmCreateFurniture").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/CreateVehicles",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }

    function UpdateData() {

        if ($('#txtName1').val() == '') {
            $('#txtName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtVehicleModel1').val() == '') {
            $('#txtVehicleModel1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Year of manufucture is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtRegistrationNumber1').val() == '') {
            $('#txtRegistrationNumber1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Registration Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtBrandName1').val() == '') {
            $('#txtBrandName1').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Brand Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }


        $("#divLoader").show();
        $("#ModalUpdateVehicle").modal('hide');

        var data = $("#frmUpdateVehicle").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/UpdateVehicle",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }

    function GetRecord(e) {
        var id = e;


        $.get("/Administrator/AssetsManager/GetVehicleById/?Id=" + id, function (data, status) {
            console.log(data);
            if (data == null) {
                alert("Does not exist");
            } else {

                $("#txtId").val(data.data.Id);
                $("#txtModelName1").val(data.data.ModelName);
                $("#txtModelYear1").val(data.data.ModelYear);
                $("#txtPlateNumber1").val(data.data.PlateNumber);
                $("#txtMakeId").val(data.data.MakeId);
                $("#txtCapacity1").val(data.data.Capacity);
                $("#txtOwner1").val(data.data.Owner);

                // $("#txtDatePurchased1").val(data.data.NewDatePurchased);

                //var d = data.data.NewDatePurchased;

                //var myTimestamp = new Date(d); //set default date to now

                //$("#txtDatePurchased1").val(myTimestamp);



                $("#txtStatus1").val(data.data.Status);

                $('#ModalUpdateVehicle').modal({ backdrop: 'static', keyboard: false })
                $("#ModalUpdateVehicle").modal('show');
            }

        });
    };

</script>


