@model IEnumerable<WebStore.Data.DTOs.SalesOrderDetailsModule.SalesOrderDetailsDTO>
@{
    ViewBag.Title = "Index";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Form Buttons</h2>

        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Enter Order Number</label>


            <div class="col-sm-9">

                <form method="post" action="/Administrator/Orders/">
                    <div class="dropdown input-group row">
                        <input type="text" class="form-control" aria-label="Text input with dropdown button" name="OrderNumber">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-primary" id="btnGetSales">
                                Find <span class="caret"></span>
                            </button>

                        </div>
                        <!-- /btn-group -->
                    </div>

                </form>

            </div>

        </div>

    </div>
</div>

<div class="">
    <div class="x_panel">
        <div class="x_title">

            <div class="row">

                <div class="col-md-3">

                    <h6 class="Header"><i class="fa fa-users"></i> Sales</h6>
                </div>
                <div class="col-md-9">
                    @*<button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#AddCustomerModal"><i class="fa fa-plus-circle"></i> Add Customer</button>*@
                </div>

            </div>


            <div class="clearfix"></div>
        </div>
        <div class="x_content">


            <div class="">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">


                            <table id="tblSales" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                  
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Selling Price</th>
                                        <th scope="col">Discount</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Order Date</th>


                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        int count = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@count</td>
                                  
                                                <td>@item.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.SellingPrice</td>
                                                <td>@item.Discount</td>
                                                <td>@item.Total</td>
                                                <td>@item.CreateDate.ToShortDateString()</td>

                                            </tr>
                                            count++;
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>

