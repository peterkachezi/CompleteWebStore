<script src="~/Content/sweetalart/sweetalert.min.js"></script>



<script>


    $(document).ready(function () {
        GetAllData();

    });

    function GetAllData() {


        var t = $('#tblFurniture').DataTable({
            "ajax": {
                "url": "/Administrator/AssetsManager/GetFurnitures",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [
                { "data": "Id" },
                { "data": "ItemName" },
                { "data": "ItemNumber" },
                { "data": "Manufacturer" },
                { "data": "Description" },
                { "data": "Quantity" },
                { "data": "CreatedByName" },
                { "data": "StatusDescription" },
                { "data": "NewCreateDate" },


                {
                    data: null,
                    mRender: function (data, type, row) {
                        return "<a href='#' class='btn-sm success'    onclick=GetRecord('" + row.Id + "'); >Edit</a> / <a href='#' class='btn-sm danger'    onclick=DeleteRecord('" + row.Id + "'); >Delete</a>";

                    }
                }

            ]

        });
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    }

    function DeleteRecord(e) {

        var id = e;

        console.log(id);


        swal(

            {
                title: "Are you sure?",

                text: "Once deleted, you will not be able to recover this  file!",

                type: "success",

                showCancelButton: true,

                confirmButtonColor: "##62b76e",

                confirmButtonText: "Yes, Procceed!",

                closeOnConfirm: false
            },

            function () {

                $.ajax({

                    type: "GET",

                    url: "/Administrator/AssetsManager/DeleteFurniture/" + id,

                    success: function (response) {

                        if (response.success) {

                            swal({

                                position: 'top-end',

                                type: "success",

                                title: response.responseText,

                                showConfirmButton: false,

                                // timer: 2000,

                            });
                            setTimeout(function () { location.reload(); }, 3000);

                        }

                        else {
                            swal({
                                position: 'top-end',
                                type: "error",
                                title: response.responseText,
                                showConfirmButton: true,
                                timer: 5000,
                            });

                        }

                    },
                    error: function (response) {
                        swal({
                            position: 'top-end',
                            type: "error",
                            title: "Server error ,kindly contact the admin for assistance",
                            showConfirmButton: false,
                            timer: 5000,
                        });

                    }

                })

            }
        );
    }

    function SaveData() {


        if ($('#txtDescription').val() == '') {
            $('#txtDescription').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Description is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtItemName').val() == '') {
            $('#txtItemName').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Item Name is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtItemNumber').val() == '') {
            $('#txtItemNumber').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Item Number is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtManufacturer').val() == '') {
            $('#txtManufacturer').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Manufacturer is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#Quantity').val() == '') {
            $('#Quantity').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Quantity is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        if ($('#txtStatus').val() == '') {
            $('#txtStatus').focus();
            swal({
                position: 'top-end',
                type: "error",
                title: "Status is a required field",
                showConfirmButton: true,
            });

            return false;
        }

        $("#divLoader").show();
        $("#ModalCreateFurniture").modal('hide');

        var data = $("#frmCreateFurniture").serialize();

        $.ajax({

            type: "POST",
            url: "/Administrator/AssetsManager/CreateFurniture",
            data: data,

            success: function (response) {
                if (response.success) {

                    swal({
                        position: 'top-end',
                        type: "success",
                        title: response.responseText,
                        showConfirmButton: false,

                    }), setTimeout(function () { location.reload(); }, 3000);

                } else {

                    swal({
                        position: 'top-end',
                        type: "error",
                        title: response.responseText,
                        showConfirmButton: true,
                        timer: 5000,
                    });

                }
            },

            error: function (response) {
                alert("error!");

            }
        })

    }
    function UpdateData() {

        if ($('#txtDescription1').val() == '') {
            $('#txtDescription1').focus();
            swal({
